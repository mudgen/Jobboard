(ns jobboard.web.util
  (:use [jobboard.dev :only (dev)]))


(defn with-home [path]
  (if dev
    (str "http://localhost:3000/" path)
    (str "/jobs/" path)))  

(defn get-home [] 
  (with-home ""))

(defn get-logo []
  (if dev
    "/public/corolla_log.png"
    "/sites/default/files/corolla_logo.png"))

